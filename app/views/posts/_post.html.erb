<div class="col-sm-12 col-lg-4 mb-3">
  <div id="board-id-<%= post.id %>">
    <div class="card">
      <%= image_tag post.posts_image_url, class: 'card-img-top', size: '300x200' %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to post.title, post_path(post) %>
        </h4>
        <!-- 自分の投稿であれば編集/削除ボタンを表示 -->
        <% if current_user.own?(post) %>
          <%= render 'crud_menus', post: post %>
        <% else %>
        <!--他人の投稿であればブックマークボタンを表示 -->
          <%= render 'bookmark_area', post: post %> 
        <%end%>
        <!-- ここまで -->
        <p class="card-text"><%= post.content%></p>
      </div>
    </div>
  </div>
</div>