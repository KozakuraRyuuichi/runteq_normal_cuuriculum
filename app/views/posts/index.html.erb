<% content_for(:title, t('.title')) %>
<div class="container pt-3">
    <div class="row">
      <div class="col-lg-10 offset-lg-1">
        <!-- 検索フォーム -->
        <%= render 'search_form', url: posts_path %>
      </div>
    </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
      <% if @posts.present? %>
        <%= render @posts %>
      <% else %>
        <%= t('.fail') %>
      <% end %>
      </div>
    </div>
  </div>
  <%= paginate @posts%>
</div>

