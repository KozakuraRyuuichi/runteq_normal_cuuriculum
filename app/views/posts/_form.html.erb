<%= form_with model: @post, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control" %> 
  </div>
  <div class="form-group">
    <%= f.label :content, "Content" %>
    <%= f.text_area :content, size: '10Ã—200', class: "form-control" %> 
  </div>
  <div class="form-group">
    <%= f.label :posts_image%>
    <%= f.file_field :posts_image, class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :posts_image_cache %> 
  </div>
  <div class='mt-3 mb-3'>
    <%= image_tag post.posts_image.url,
                  id: 'preview',
                  size: '300x200' %>
  </div>
  <%= f.submit class: "btn btn-primary" %> 
<% end %>